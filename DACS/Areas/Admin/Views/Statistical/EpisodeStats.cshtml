@model List<DACS.ViewModels.EpisodeRatingStatsViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Podcast Episode Stats";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Thống kê các tập Pocast theo điểm đánh giá</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tập Podcast</th>
            <th>Ngày phát hành</th>
            <th>Thời lượng(phút)</th>
            <th>Tổng lượt đánh giá</th>
            <th>Điểm đánh giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var episode in Model)
        {
            <tr>
                <td>
                    <img src="~/@episode.EpImage" alt="@episode.Title" style="width: 50px; height: 50px;" />
                    <span>@episode.Title</span>
                </td>
                <td>@episode.ReleaseDate.ToShortDateString()</td>
                <td>@episode.Duration</td>
                <td>@episode.TotalRatings</td>
                <td>@episode.AverageRating.ToString("0.0") <i class="fas fa-star"></i></td>
            </tr>
        }
    </tbody>
</table>
