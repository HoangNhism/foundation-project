@model IEnumerable<DACS.Models.ApplicationUser>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Users";
    // Layout = "~/Areas/Admin/_Layout_Admin.cshtml";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center">Danh sách người dùng</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Họ và tên
            </th>
            <th>
                Email
            </th>
            <th>
                Số điện thoại
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>

                <td>
                    @if (item.LockoutEnd != null)
                    {
                        <a asp-area="Admin" asp-controller="Admin" asp-action="UnlockUser" asp-route-userId="@item.Id">
                            <button class="btn btn-success" onclick="test()">
                                <i class="bi bi-unlock-fill"></i>
                            </button>
                        </a>
                    }
                    else
                    {
                        <a asp-area="Admin" asp-controller="Admin" asp-action="LockUser" asp-route-userId="@item.Id">
                            <button class="btn btn-danger">
                                <i class="bi bi-lock-fill"></i>
                            </button>
                        </a>
                    }
                    <a asp-action="UpToAdmin" asp-route-userId="@item.Id">
                        <button class="btn btn-success">
                            <i class="bi bi-gear-fill"></i>
                        </button>
                    </a>
                    <a a asp-action="SetUserPassword" asp-route-userId="@item.Id">
                        <button class="btn btn-secondary">
                            <i class="bi bi-key-fill"></i>
                        </button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>