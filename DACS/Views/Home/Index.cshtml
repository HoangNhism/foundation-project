@model DACS.Models.PodcastViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="site-blocks-cover overlay" style="background-image: url(https://i3.ytimg.com/vi/HBqsm_e3pqI/maxresdefault.jpg);" data-aos="fade" data-stellar-background-ratio="1.8">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h2 class="text-white font-weight-light mb-2 display-4">HAS EP87: Chữa lành là trở về với chính mình để tìm thuốc</h2>
                <div class="text-white mb-4">
                    <span class="text-white-opacity-05">
                        <small>
                            Host: Thùy Minh |
                            Speaker: Thầy Minh Niệm, Thiền sư, Tác giả sách |
                            29 Th7 2022 | 1:23:56
                        </small>
                    </span>
                </div>
                <p><a href="single-post.html" class="btn btn-primary btn-sm py-3 px-4 small">Xem chi tiết</a></p>

                <div class="player">
                    <audio id="player2" preload="none" controls style="max-width: 100%">
                        <source src="~/Video/HaveAShip EP87.mp3" type="audio/mp3">
                    </audio>
                </div>

            </div>
        </div>
    </div>
</div>


<div class="site-section bg-light">
    <div class="container">

        <div class="row mb-5" data-aos="fade-up">
            <div class="col-md-12 text-center">
                <h2 class="font-weight-bold text-black">
                    Podcasts gần đây
                </h2>
            </div>
        </div>
        @foreach (var item in Model.Episodes)
        {
            <div class="d-block d-md-flex podcast-entry bg-white mb-5" data-aos="fade-up">
                <div class="image" style="background-image: url('/@item.EpImage');width:1000px;height:350px"></div>
                <div class="text">

                    <h3 class="font-weight-light"><a href="single-post.html">@item.Podcast.Title EP @item.PodcastID: @item.Title</a></h3>
                    <div class="text-white mb-3">
                        <span class="text-black-opacity-05">
                            <small>
                                @item.Podcast.Artist.ArtistName <span class="sep">/</span> @item.ReleaseDate <span class="sep">/</span> @item.Duraion minute
                            </small>
                        </span>
                    </div>
                    <p class="mb-4">@item.Description </p>
                    <div class="player">
                        <audio id="player2" preload="none" controls style="max-width: 100%">
                            <source src="~/@item.AudioUrl" type="audio/mp3">
                        </audio>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <div class="d-block d-md-flex podcast-entry bg-white mb-5" data-aos="fade-up">
        @foreach (var item in Model.Topics)
        {
            <div class="btn-group" style="width:10%">
                <a asp-action="PodcastList" asp-route-id="@item.TopicID">
                    <button style="background-image: url('/@item.ImageURL'); background-size: cover; width: 200px; height: 50px; color: white; font-size: 16px; border: none; border-radius: 5px; cursor: pointer;">@item.TopicName</button>
                </a>
            </div>
        }
    </div>
    <div class="container" data-aos="fade-up">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="site-block-27">
                    <ul>
                        <li><a href="#">&lt;</a></li>
                        <li class="active"><span>1</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">&gt;</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

