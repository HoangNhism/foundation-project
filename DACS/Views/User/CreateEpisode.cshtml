@model DACS.Models.Episode

@{
    ViewData["Title"] = "Thêm tập";
}

<div style="margin:10px">
    <form asp-action="CreateEpisode">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="PodcastID" class="form-control" />
            <span asp-validation-for="PodcastID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Title" class="control-label">Tiêu đề</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Mô tả</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AudioUrl" class="control-label">Chọn file mp3</label>
            <input type="file" asp-for="AudioUrl" class="form-control" />
            <span asp-validation-for="AudioUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EpImage" class="control-label">Chọn ảnh tập</label>
            <input type="file" asp-for="EpImage" class="form-control" />
            <span asp-validation-for="EpImage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button style="margin-left:10px" type="submit" class="btn btn-danger btn-sm py-3 px-4 small">Thêm tập mới</button>
        </div>
    </form>
</div>

<div>
    <form asp-action="MyEpisodesByPodcast" asp-route-id="@Model.PodcastID">
        <button style="margin-left:20px; margin-bottom: 20px" type="submit" class="btn btn-danger btn-sm py-3 px-4 small">Trở về</button>
    </form>
</div>
