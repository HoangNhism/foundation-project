@model DACS.Models.PodcastViewModel
@{
    ViewData["Title"] = "Danh sách Podcast";
}
<form asp-controller="User" asp-action="CreatePodcast" method="get" class="mt-3">
    <button style="margin-bottom:20px;margin-left:20px" type="submit" class="btn btn-danger btn-sm py-3 px-4 small">Tạo Podcast Mới</button>
</form>
<div class="podcast-container">
    @{
        int counter = 0;
    }
    @foreach (var item in Model.Podcasts)
    {
        if (counter > 0 && counter % 6 == 0)
        {
            @:<div style="clear: both;"></div>
        }
        <div class="podcast-button" style="background-image: url('/@item.ImageUrl');margin-left:20px">
            <a asp-controller="User" asp-action="MyEpisodesByPodcast" asp-route-id="@item.PodcastID" class="podcast-link">
                <div class="podcast-info">
                    <h3>@item.Title</h3>
                </div>
            </a>
        </div>
        counter++;
    }
</div>
<style>
    .podcast-container {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .podcast-button {
        position: relative;
        width: 200px;
        height: 200px;
        background-size: cover;
        background-position: center;
        border-radius: 10px;
        overflow: hidden;
    }

    .podcast-link {
        display: block;
        width: 100%;
        height: 100%;
        color: white;
        text-decoration: none;
    }

    .podcast-info {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.6);
        padding: 10px;
        text-align: center;
    }

        .podcast-info h3 {
            margin: 0;
            font-size: 1.2em;
        }

        .podcast-info p {
            margin: 5px 0 0;
            font-size: 0.9em;
        }
</style>